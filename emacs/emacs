;; Do not show start up buffer or toolbar
(setq inhibit-splash-screen t)
(setq inhibit-startup-message t)
(tool-bar-mode -1)

;; Show matching parens
(show-paren-mode 1)

;; big font for lecture
(set-face-attribute 'default nil :height 260)

;; Show line and column numbers
(setq line-number-mode t)
(setq column-number-mode t)

;; Do not use tabs
(setq-default indent-tabs-mode nil)

;; Highlight tabs, lines over 80 columns, and trailing whitespace
;(require 'whitespace)
;;(setq whitespace-style '(face tabs lines-tail trailing))
;(setq whitespace-style '(face tabs lines-tail))
;(global-whitespace-mode t)

;; Open .v files with Proof General's Coq mode
;;(load "~/.emacs.d/lisp/PG/generic/proof-site")

;; SML setup
(setenv "PATH" (concat "/usr/local/smlnj/bin:" (getenv "PATH")))
(setq exec-path (cons "/usr/local/smlnj/bin" exec-path))

;; Use MELPA Emacs package manager
(require 'package)
(let* ((no-ssl (and (memq system-type '(windows-nt ms-dos))
                    (not (gnutls-available-p))))
       (proto (if no-ssl "http" "https")))
  (add-to-list 'package-archives
               (cons "melpa" (concat proto "://melpa.org/packages/")) t))
(package-initialize)

(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(package-selected-packages (quote (proof-general sml-mode tuareg boogie-friends))))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 )

SHELL=/bin/bash
LOCAL_LOADS=/cse/web/homes/ztatlock/loads

*/5 * * * * source $HOME/.bashrc; $HOME/bin/update-load.sh -l $LOCAL_LOADS/ 2> /dev/null

# caribou fetches group machine loads
*/20 * * * * sleep `expr $RANDOM \% 600`; scp 'warfa.cs.washington.edu:~/loads/warfa*' $LOCAL_LOADS
*/20 * * * * sleep `expr $RANDOM \% 600`; scp             'uwplse.org:~/loads/uwplse*' $LOCAL_LOADS
